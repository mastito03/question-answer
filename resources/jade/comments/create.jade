        .col-sm-9

            h3 {{ $title }}
            div {!! $content !!}

            +form()(route!='$route')

                .form-group
                    label Comment
                        small required
                    +text('content')('required').form-control

                +submit("'Submit'").btn.btn-default

        +include('partials.aside')

